@model LearnLanguagesDictionaryWebsite.Models.VocabularyModel

@{
    ViewData["Title"] = "ViewVocabulary";
}

<h1>View Vocabulary 2</h1>

<h1>ViewVocabulary</h1>
<h4>VocabularyModel</h4>
<hr />
<p> TO Do List: Double click and make the edit form appear</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewVocabulary">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Key" />
            <div class="form-group">
                <label asp-for="EnglishMeaning" class="control-label"></label>
                <p>@Model.EnglishMeaning </p>
                <input asp-for="EnglishMeaning" class="form-control" />
                <span asp-validation-for="EnglishMeaning" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExampleSentences" class="control-label"></label>
                <p>@Model.ExampleSentences</p>
                <input asp-for="ExampleSentences" class="form-control" />
                <span asp-validation-for="ExampleSentences" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalNote" class="control-label"></label>
                <p>@Model.AdditionalNote</p>
                <input asp-for="AdditionalNote" class="form-control" />
                <span asp-validation-for="AdditionalNote" class="text-danger"></span>
            </div>

            @for (var i = 0; i < Model.RegionalWords.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="RegionalWords" class="control-label"></label>
                    <p> @Model.RegionalWords[i].Hanji</p>
                    <input asp-for="@Model.RegionalWords[i].Hanji" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="RegionalWords[i].Pronunciation" class="control-label"></label>
                    <p> @Model.RegionalWords[i].Hanji</p>
                    <input asp-for="@Model.RegionalWords[i].Pronunciation" class="form-control" />

                </div>

                
                <div class="form-group">
                    <label asp-for="RegionalWords" class="control-label"></label>
                    @if (Model.RegionalWords[i].AudioLink != null)
                    {
                        <p> @Model.RegionalWords[i].Hanji</p>
                    }
                    <input asp-for="@Model.RegionalWords[i].AudioLink" class="form-control" />

                </div>

            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
