@model MinLanguage.Models.VocabsSuggest

@{
    ViewData["Title"] = "Approve";
}

<h1>Approve</h1>

<h3>Are you sure you want to approve this?</h3>
<div>
    <h4>VocabsSuggest</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VocabsKey)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VocabsKey)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnglishTranslation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnglishTranslation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegionUsed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegionUsed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExampleSentences)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExampleSentences)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WordClass)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WordClass)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        @for (int i = 0; i < Model.RegionalPronunciations.Count; i++)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegionalPronunciations[i].Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegionalPronunciations[i].Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegionalPronunciations[i].Pronunciation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegionalPronunciations[i].Pronunciation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegionalPronunciations[i].Hanji)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegionalPronunciations[i].Hanji)
            </dd>
        }
    </dl>
    
    <form asp-action="Approve">
        <input type="hidden" asp-for="Key" />
        <input type="submit" value="Approve" class="btn btn-primary" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
