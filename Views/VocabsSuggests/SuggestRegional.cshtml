@model MinLanguage.Models.RegionalSuggest

@{
    ViewData["Title"] = "Add regional pronunciation";
}

<h1>Add regional pronunciation</h1>

<h4>RegionalSuggest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuggestRegional">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegionalKey" class="control-label"></label>
                <input asp-for="RegionalKey" class="form-control" />
                <span asp-validation-for="RegionalKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pronunciation" class="control-label"></label>
                <input asp-for="Pronunciation" class="form-control" />
                <span asp-validation-for="Pronunciation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hanji" class="control-label"></label>
                <input asp-for="Hanji" class="form-control" />
                <span asp-validation-for="Hanji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
