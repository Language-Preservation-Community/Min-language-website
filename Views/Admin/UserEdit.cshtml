@model string

@{
    ViewData["Title"] = "Find user";
}

<h1>Find user</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserEdit">
            <div class="form-group">
                <label>Email<input name="email" value="@Model" /></label>
                @if (Model != null)
                {
                    <span>User with that email does not exist</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

